<form id="login" style="{{changeHeight}}" method="post" action="/users">
    <h1>Sign Up</h1>
    <fieldset id="inputs">
        <h4 style="color: red;">{{notification}}</h4>
        <input id="name" type="text" placeholder="Your full name" name="name" value="{{user.name}}" autofocus required>
        <input id="username" type="email" placeholder="Email" name="email" value="{{user.email}}" required>
        <input id="password" type="password" placeholder="Password" name="pass" required>
        <input id="repassword" type="password" placeholder="Re-Password" name="repass" required>
        <input id="ATN-employid" type="password" placeholder="ATN - EmployeeID" name="atnID" required>
    </fieldset>
    <fieldset id="actions">
        <input type="submit" id="submit" value="Sign up">
        <a href="/users/signin">You have been an account? Sign in now!</a>
        <script>{{notification}}</script>
    </fieldset>
</form>
